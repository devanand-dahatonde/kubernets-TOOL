<h1> yellow.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: rc-game
spec:
  replicas: 2
  selector:
   matchLabels:
    env: yellow
  template:
   metadata:
     name: tmp-game
     labels:
       env: yellow
   spec:
      containers:
       - name: c1
         image: devlila/index.html:yellow
         ports:
         - containerPort: 80

         <h1> Blue.yaml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: rc-ga
spec:
  replicas: 2
  selector:
   matchLabels:
    env: blue
  template:
   metadata:
     name: tmp-ga
     labels:
       env: blue
   spec:
      containers:
       - name: c1
         image: devlila/index.html:blue
         ports:
         - containerPort: 80

         <h1> service.yaml

apiVersion: v1
kind: Service
metadata:
  name: rc-game
spec:
  selector:
   env: blue
  ports:
   - protocol: TCP
     port: 80
     targetPort: 80
  type: NodePort
