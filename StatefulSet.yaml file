apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: redis
spec:
  serviceName: "redis-headless"
  replicas: 4
  selector:
    matchLabels:
      env: redis
  template:
    metadata:
      labels:
        env: redis
    spec:
      containers:
      - name: c1
        image: devlila/index.html:v1
        ports:
        - containerPort: 6379

---

apiVersion: v1
kind: Service
metadata:
  name: redis-headless
spec:
  selector:
    env: redis
  ports:
  - protocol: TCP
    port: 6379
    targetPort: 6379
  type: NodePort
