apiVersion: apps/v1
kind: ReplicaSet
metadata:
   name: pods
spec:
  replicas: 2
  selector: 
    matchLabels:
      env: dev
  template: 
    metadata:
       name: tmp-game
       labels:
         env: dev
    spec: 
       containers:
        - name: c1
          image: devlila/index.html:v1
          ports:
          - containerPort: 80


          ---


          apiVersion: v1
          kind: Service
          metadata:
            name: service name
          spec:
            selector:
               env: dev
            ports:
             - protocol: TCP
               port: 80
               targetPort: 80
            type: NodePort   







            
   
